<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#CD0000" />
        <stroke
            android:width="1dp"
            android:color="@android:color/black" />
        <corners android:radius="10dp"/>
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
<item>
    <shape>
        <solid
            android:color="#A52A2A" />
        <stroke
            android:width="1dp"
            android:color="@android:color/black" />
        <corners android:radius="10dp"/>
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
</selector>